
<form>
<div class="row">
<div class="col-6">
<%= form_with model: billboard do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %>
 
    <% billboard.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :image %><br>
    <%= form.text_field :image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :lat %><br>
    <%= form.text_field :lat, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :lon %><br>
    <%= form.text_field :lon, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :size %><br>
    <%= form.text_field :size, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :screen_type %><br>
    <%= form.text_field :screen_type, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :direction %><br>
    <%= form.text_field :direction, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :orientation %><br>
    <%= form.text_field :orientation, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :unit_type %><br>
    <%= form.text_field :unit_type, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
  <div class="form-group">
    <%= link_to 'Back', root_path %>
  </div>

</div>
</div>
</form>

